{
  "id": "yandex",
  "viewports": [
    {
      "label": "Desktop HD",
      "width": 1920,
      "height": 1080
    },
    {
      "label": "Desktop",
      "width": 1600,
      "height": 900
    }
  ],
  "onBeforeScript": "",
  "onReadyScript": "",
  "scenarios": [
    {
      "label": "BackstopJS Homepage",
      "url": "https://garris.github.io/BackstopJS/",
      "misMatchThreshold": 0.1,
      "readySelector": ".container",
      "delay": "0",
      "readyEvent": "readyEvent",
      "hideSelectors": [
        ".news-feed",
        ".notifications"
      ],
      "removeSelectors": [
        ".avatar"
      ],
      "clickSelectors": [
        ".clickSelector1"
      ],
      "scrollToSelector": ".scrollToSelector",
      "hoverSelectors": [
        ".hoverSelector1"
      ],
      "postInteractionWait": 0,
      "type": "[Configuration] updateScenario"
    },
    {
      "label": "Home Page",
      "url": "http://localhost:4200/",
      "misMatchThreshold": "",
      "hideSelectors": [
        "#history-container"
      ]
    },
    {
      "label": "Configuration Page",
      "url": "http://localhost:4200/config/1",
      "misMatchThreshold": "",
      "hideSelectors": [
        "#history-container"
      ]
    },
    {
      "label": "404 Page",
      "url": "http://localhost:4200/unknown-route",
      "misMatchThreshold": "",
      "hideSelectors": [
        "#history-container"
      ]
    }
  ],
  "report": [
    "CI",
    "json"
  ],
  "engine": "puppeteer",
  "engineOptions": {
    "args": [
      "--no-sandbox"
    ]
  },
  "asyncCaptureLimit": 5,
  "asyncCompareLimit": 50,
  "debug": false,
  "debugWindow": false
}
